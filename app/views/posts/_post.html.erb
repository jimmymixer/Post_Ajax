<!-- TO BE DISPLAYED ON INDEX PAGE USING AJAX -->
<div class="col-md-4 blog-main box text-center" id="post_<%= post.id %>">
  <!-- PANEL INFO -->
  <div class="panel panel-info">

    <div class="panel-heading">
      <h3 class="panel-title"><%= post.title %></h3>
      <p><%= post.content %></p>
      <p>Post.id = <%= post.id %></p>
    </div>

    <!-- PANEL BODY -->
    <div class="panel-body">
      <div style="color: #3BB2D6;"><%= time_ago_in_words(post.created_at) %></div>
      <br>

      <div class="btn-group" role="group" aria-label="...">
        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myupdatepost_<%= post.id %>">
          Edit
        </button>
        <%= link_to "Destroy", post, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>

  </div>

  <!-- MODAL - UPDATE POSTS -->
  <%= form_for(post, :method => :put, remote: true) do |f| %>
    <div class="modal fade" id="myupdatepost_<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Edit</h4>
          </div>

          <div class="modal-body">

            <div class="field">
              <%= f.label :title %> <br>
              <%= f.text_area :title, class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :content %> <br>
              <%= f.text_area :content, class: "from-control" %>
            </div>

          </div>

          <div class="modal-footer">
            <button class="btn btn-default" type="button" id="myupdatebutton_<%= post.id %>" data-dismiss="modal">Close</button>
            <%= submit_tag "Update", class: "btn btn-primary" %>
          </div>

        </div>
      </div>
    </div>
  <% end %>

</div>
